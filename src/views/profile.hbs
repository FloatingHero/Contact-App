<link rel='stylesheet' href='/css/profile.css' />

<div class='container'>
	{{#if message}}
		<div class='container__error__message'>
			<h2>
				{{message}}
			</h2>
		</div>
	{{/if}}

	{{#if success_message}}
		<div id='container__success__message'>
			<span class='material-icons' id='close'>
				close
			</span>
			<h2>
				{{success_message}}
			</h2>
		</div>
	{{/if}}

	{{#each contacts}}
		<div class='contact'>
			<div class='contact__forms'>
				<form action='/delete_contact' method='post'>
					<input
						type='hidden'
						name='contact__id'
						value='{{this.id}}'
					/>
					<button type='submit'>
						<span class='material-icons'>
							close
						</span>
					</button>
				</form>
				<a href='/editar-contacto/{{this.id}}' class='edit'>
					<span class='material-icons'>
						edit
					</span>
				</a>
			</div>

			<div class='contact__name'>
				<h1>
					{{this.name}}
				</h1>
			</div>
			<div class='contact__email'>
				<h3>
					{{this.email}}
				</h3>
			</div>
			<div class='contact__number__phone'>
				<h3>
					{{this.phone_number}}
				</h3>
			</div>

		</div>
	{{/each}}

</div>

<script src='/js/dispose.js'></script>