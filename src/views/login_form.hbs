<link rel="stylesheet" href="/css/login_form.css">

<div class="container">
    <form action="/login" class="login__form" method="post">
        <div class="login__form__group">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" class="login__form__group__input">
        </div>
        <div class="login__form__group">
            <label for="password">Contraseña</label>
            <input type="password" name="password" id="password" class="login__form__group__input">
        </div>
        <div class="login__form__group">
            <button type="submit" class="login__form__group__submit">Iniciar sesión</button>
            <span>¿No tienes cuenta? Regístrate <a href="/formulario-registro">aquí</a></span>
        </div>
    </form>
</div>